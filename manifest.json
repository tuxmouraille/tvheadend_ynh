{
    "name": "Tvheadend",
    "id": "tvheadend",
    "packaging_format": 1,
    "description":
    {
        "en": "Tvheadend",
        "fr": "Tvheadend"
    },
    "url": "https://tvheadend.org/",
    "license": "free",
    "maintainer":
    {
        "name": "txmrl",
        "email": "txmrl@txmrl.net"
    },
    "requirements": {
        "yunohost": ">= 2.4.0"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Tvheadend",
                    "fr": "Choisissez un nom de domaine pour Tvheadend"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Tvheadend",
                    "fr": "Choisissez un chemin pour Tvheadend"
                },
                "example": "/tvheadend",
                "default": "/tvheadend"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Admin password",
                    "fr": "Mot de passe administrateur"
                },
                "example": "Za6kohth9cuwu3isohjo"
            },
            {
                "name": "user",
                "type": "user",
                "ask": {
                    "en": "First user (must be an existing YunoHost user)",
                    "fr": "Utilisateur (doit Ãªtre un utilisateur YunoHost existant)"
                }
            }
        ]
    }
}
